<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<!--Külső BorderPane-re kellett rakni egy VGROW="ALWAYS"-t hogy növekedjen minden irányba  -->

<VBox fx:id="mainLoginBox" alignment="CENTER" maxHeight="400.0" maxWidth="300.0" minHeight="400.0" minWidth="300.0" prefWidth="300.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.petrik.bankdesktopapp.AddUserPopUp">
    <BorderPane maxHeight="Infinity" stylesheets="@loginDesign.css" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/">
        <center>
            <BorderPane styleClass="right-form">
                <center>
                    <VBox alignment="CENTER" fillWidth="true" maxHeight="Infinity" prefWidth="400.0" spacing="20">
                  <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Felhasználó felvétele a számlához">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Text>
                        <TextField fx:id="emailInput" maxWidth="200.0" promptText="Email" styleClass="text-field" />
                        <Button maxWidth="Infinity" onAction="#AddUserToCard" styleClass="login-button" text="Hozzáadás" />
                  <Button fx:id="closeWindowBtn" maxWidth="Infinity" onAction="#CancelUserAdd" styleClass="login-button" text="Vissza" />

                    </VBox>
                </center>
            </BorderPane>
        </center>
    </BorderPane>

</VBox>
