<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="200.0" prefWidth="200.0" stylesheets="@mainPage.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="hu.petrik.bankdesktopapp.Confirmation">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" styleClass="container" stylesheets="@confirmation.css">
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Biztos törölni akarod?">
               <font>
                  <Font size="15.0" />
               </font></Text>
            <Button fx:id="confirm" maxWidth="60.0" minWidth="100.0" mnemonicParsing="false" onAction="#confirmAction" prefHeight="20.0" prefWidth="200.0" style="-fx-max-width: 60;" text="Igen">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Button>
            <Button alignment="CENTER" maxWidth="60.0" minWidth="100.0" mnemonicParsing="false" onAction="#cancelAction" prefWidth="60.0" style="-fx-max-width: 60;" text="Nem">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
